{
  "name": "capital-reallocator",
  "version": "1.0.0",
  "description": "Capital Reallocator Solana Program",
  "scripts": {
    "// ================== Build & Deploy ==================": "",
    "build": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "test": "anchor test",
    
    "// ================== Local Development ==================": "",
    "validator": "solana-test-validator --reset --quiet",
    "logs": "solana logs",
    
    "// ================== Setup & Initialization ==================": "",
    "setup": "npx ts-node scripts/utils/setup.ts",
    "fund": "npx ts-node scripts/utils/fund.ts",
    "init-protocol": "npx ts-node scripts/utils/init-protocol.ts",
    "init-user": "npx ts-node scripts/utils/init-user.ts",
    
    "// ================== Position Management ==================": "",
    "create-position": "npx ts-node scripts/utils/create-position.ts",
    "deposit": "npx ts-node scripts/utils/deposit.ts",
    "withdraw": "npx ts-node scripts/utils/withdraw.ts",
    "close-position": "npx ts-node scripts/utils/close-position.ts",
    
    "// ================== Monitoring ==================": "",
    "balances": "npx ts-node scripts/utils/check-balances.ts",
    "monitor": "npx ts-node scripts/utils/monitor-positions.ts",
    
    "// ================== Pyth Integration ==================": "",
    "pyth-devnet": "npx ts-node scripts/utils/pyth-devnet.ts",
    
    "// ================== Account Cleanup ==================": "",
    "close-accounts": "npx ts-node scripts/utils/close-all-accounts.ts",
    "close-accounts:confirm": "npx ts-node scripts/utils/close-all-accounts.ts --confirm",
    
    "// ================== Utilities ==================": "",
    "clean": "rm -f scripts/state.json && anchor clean",
    "keys": "anchor keys list",
    
    "// ================== Environment Switching ==================": "",
    "env:local": "export ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 && export ANCHOR_WALLET=~/.config/solana/id.json && solana config set --url localhost",
    "env:devnet": "export ANCHOR_PROVIDER_URL=https://api.devnet.solana.com && export ANCHOR_WALLET=~/.config/solana/id.json && solana config set --url devnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@pythnetwork/hermes-client": "^2.0.0",
    "@pythnetwork/pyth-solana-receiver": "^0.10.2",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.2",
    "axios": "^1.11.0",
    "bn.js": "^5.2.1",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "chai": "^4.4.1",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
