{
  "name": "capital-reallocator",
  "version": "1.0.0",
  "description": "Capital Reallocator Solana Program",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "anchor build",
    "deploy:local": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "test": "anchor test",
    "validator": "solana-test-validator --reset --quiet",
    "config:local": "solana config set --url localhost",
    "config:devnet": "solana config set --url devnet",
    "setup": "npx ts-node scripts/utils/setup.ts",
    "init-protocol": "npx ts-node scripts/utils/init-protocol.ts",
    "init-user": "npx ts-node scripts/utils/init-user.ts",
    "create-position": "npx ts-node scripts/utils/create-position.ts",
    "deposit": "npx ts-node scripts/utils/deposit.ts",
    "withdraw": "npx ts-node scripts/utils/withdraw.ts",
    "balances": "npx ts-node scripts/utils/check-balances.ts",
    "close-position": "npx ts-node scripts/utils/close-position.ts",
    "local:setup": "yarn config:local && yarn setup",
    "local:full": "yarn config:local && yarn setup && yarn init-protocol && yarn init-user && yarn create-position",
    "devnet:setup": "yarn config:devnet && yarn setup",
    "devnet:full": "yarn config:devnet && yarn setup && yarn init-protocol && yarn init-user && yarn create-position",
    "airdrop": "solana airdrop 2",
    "balance:sol": "solana balance",
    "clean": "rm -f scripts/state.json && anchor clean"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.2",
    "bn.js": "^5.2.1",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "chai": "^4.4.1",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
